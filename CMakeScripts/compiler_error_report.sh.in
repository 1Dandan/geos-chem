#!/bin/bash
@CMAKE_COMMAND@ -E echo "Logging your configuration..."
@CMAKE_COMMAND@ -DCMAKE_COLOR_MAKEFILE=FALSE -DCMAKE_VERBOSE_MAKEFILE=TRUE . > configuration.log 2>&1
@CMAKE_COMMAND@ -E echo "Logging your build...      (this may take a while)"
make --no-print-directory VERBOSE=1 > build.log  2>&1
@CMAKE_COMMAND@ -DCMAKE_COLOR_MAKEFILE=@CMAKE_COLOR_MAKEFILE@ -DCMAKE_VERBOSE_MAKEFILE=@CMAKE_VERBOSE_MAKEFILE@ . > returned_variable.stamp 2>&1
@CMAKE_COMMAND@ -E echo "Generating report.tar.gz ..."
@CMAKE_COMMAND@ -E tar -czf report.tar.gz build.log configuration.log CMakeCache.txt
@CMAKE_COMMAND@ -E echo "Cleaning up..."
@CMAKE_COMMAND@ -E remove -f build.log configuration.log returned_variable.stamp
