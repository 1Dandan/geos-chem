#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: Set here the F90 compiler and options
#       Pedefined compilers: INTEL, PGF, HPUX, LAHEY
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

#COMPILER = G95
#COMPILER = LAHEY
COMPILER = INTEL
#COMPILER = PGF
#COMPILER = HPUX
#COMPILER = GFORTRAN

FC_G95     = g95
FOPT_G95   = -cpp -O -pg -fbounds-check -fimplicit-none  -Wall -ftrace=full

FC_LAHEY   = lf95
# More aggressive for production runs:
#FOPT_LAHEY = -Cpp --pca -O
# More checking for debugging:
FOPT_LAHEY = -Cpp --chk a,e,s,u --pca --ap -O0 -g --trap --trace --chkglobal

FC_INTEL   = ifort 
# More aggressive for production runs:
#FOPT_INTEL = -cpp -O -fp-model precise -pc80 -prec_div
# More checking for debugging:
FOPT_INTEL = -cpp -O0 -fp-model strict -implicitnone -ftrapuv \
              -debug all -check all -warn all

FC_PGF     = pgf90
# More aggressive for production runs:
FOPT_PGF   = -Mpreprocess -O -fast -pc 80 -Kieee
# More checking for debugging:
#FOPT_PGF   = -Mpreprocess -O0 -Mbounds -Mchkfpstk -Mchkptr -Mchkstk \
#             -Ktrap=fp -pc 80 -Kieee

FC_HPUX    = f90
FOPT_HPUX  = -O -u +Oall +check=on

FC_GFORTRAN     = gfortran
FOPT_GFORTRAN   = -cpp -O

# define FULL_ALGEBRA for non-sparse integration
FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) # -DFULL_ALGEBRA

LIBS =
#LIBS = -llapack -lblas

# Command to create Matlab mex gateway routines 
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

GENSRC = gcHg_Precision.f90  \
	 gcHg_Parameters.f90     \
	 gcHg_Global.f90  

GENOBJ = gcHg_Precision.o    \
	 gcHg_Parameters.o       \
	 gcHg_Global.o     

FUNSRC = gcHg_Function.f90 
FUNOBJ = gcHg_Function.o 

JACSRC = gcHg_JacobianSP.f90  gcHg_Jacobian.f90
JACOBJ = gcHg_JacobianSP.o    gcHg_Jacobian.o

HESSRC = gcHg_HessianSP.f90   gcHg_Hessian.f90
HESOBJ = gcHg_HessianSP.o     gcHg_Hessian.o

STMSRC = gcHg_StoichiomSP.f90 gcHg_Stoichiom.f90 
STMOBJ = gcHg_StoichiomSP.o   gcHg_Stoichiom.o

UTLSRC = gcHg_Rates.f90 gcHg_Util.f90 gcHg_Monitor.f90
UTLOBJ = gcHg_Rates.o   gcHg_Util.o   gcHg_Monitor.o

LASRC  = gcHg_LinearAlgebra.f90 
LAOBJ  = gcHg_LinearAlgebra.o   

STOCHSRC = gcHg_Stochastic.f90 
STOCHOBJ = gcHg_Stochastic.o 

MAINSRC = gcHg_Main.f90   gcHg_Initialize.f90   gcHg_Integrator.f90 gcHg_Model.f90
MAINOBJ = gcHg_Main.o     gcHg_Initialize.o     gcHg_Integrator.o   gcHg_Model.o 

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       objects needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
ALLOBJ = $(GENOBJ) $(FUNOBJ) $(JACOBJ) $(HESOBJ) $(STMOBJ) \
	 $(UTLOBJ) $(LAOBJ)

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       executables needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
all:    exe

exe:	$(ALLOBJ) $(MAINOBJ) 
	$(FC) $(FOPT) $(ALLOBJ) $(MAINOBJ) $(LIBS) -o gcHg.exe

stochastic:$(ALLOBJ) $(STOCHOBJ) $(MAINOBJ)
	$(FC) $(FOPT) $(ALLOBJ) $(STOCHOBJ) $(MAINOBJ) $(LIBS) \
	-o gcHg_stochastic.exe

mex:    $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O gcHg_mex_Fun.f90     $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O gcHg_mex_Jac_SP.f90  $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O gcHg_mex_Hessian.f90 $(ALLOBJ)

clean:
	rm -f gcHg*.o gcHg*.mod \
	gcHg*.dat gcHg.exe gcHg*.mexglx \
	gcHg.map

distclean:
	rm -f gcHg*.o gcHg*.mod \
	gcHg*.dat gcHg.exe gcHg.map \
	gcHg*.f90 gcHg_*.mexglx

gcHg_Precision.o: gcHg_Precision.f90 
	$(FC) $(FOPT) -c $<

gcHg_Parameters.o: gcHg_Parameters.f90 \
	            gcHg_Precision.o
	$(FC) $(FOPT) -c $<

gcHg_Monitor.o: gcHg_Monitor.f90 \
	             gcHg_Precision.o
	$(FC) $(FOPT) -c $<

gcHg_Global.o: gcHg_Global.f90 \
	            gcHg_Parameters.o gcHg_Precision.o
	$(FC) $(FOPT) -c $<

gcHg_Initialize.o: gcHg_Initialize.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

gcHg_Function.o: gcHg_Function.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

gcHg_Stochastic.o: gcHg_Stochastic.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

gcHg_JacobianSP.o: gcHg_JacobianSP.f90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

gcHg_Jacobian.o: gcHg_Jacobian.f90  $(GENOBJ) gcHg_JacobianSP.o
	$(FC) $(FOPT) -c $<

gcHg_LinearAlgebra.o: gcHg_LinearAlgebra.f90 $(GENOBJ) gcHg_JacobianSP.o
	$(FC) $(FOPT) -c $<

gcHg_Rates.o: gcHg_Rates.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

gcHg_HessianSP.o: gcHg_HessianSP.f90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

gcHg_Hessian.o:  gcHg_Hessian.f90 $(GENOBJ) gcHg_HessianSP.o
	$(FC) $(FOPT) -c $<

gcHg_StoichiomSP.o: gcHg_StoichiomSP.f90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

gcHg_Stoichiom.o: gcHg_Stoichiom.f90  $(GENOBJ) gcHg_StoichiomSP.o
	$(FC) $(FOPT) -c $<

gcHg_Util.o: gcHg_Util.f90  $(GENOBJ) gcHg_Monitor.o
	$(FC) $(FOPT) -c $<

gcHg_Main.o: gcHg_Main.f90  $(ALLOBJ) gcHg_Initialize.o gcHg_Model.o gcHg_Integrator.o
	$(FC) $(FOPT) -c $<

gcHg_Model.o: gcHg_Model.f90  $(ALLOBJ) gcHg_Integrator.o
	$(FC) $(FOPT) -c $<

gcHg_Integrator.o: gcHg_Integrator.f90  $(ALLOBJ)
	$(FC) $(FOPT) -c $<
