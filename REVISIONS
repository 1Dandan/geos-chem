("lightning_nox_nl_mod.f")

CMN_SIZE		   -- Bug fix: set LLTROP_FIX = LLPAR for GCAP

convtran		   -- Bug fix: avoid div by zero in formula for CHAT
("gcap_convect_mod.f")

