      -  Pb210s
      -  Be7
      -  Be7s
      -  Be10
      -  Be10s
      -  SF6
      -  CH3I
      -  aoa
      -  aoa_bl
      -  aoa_nh
      -  e90
      -  e90_n
      -  e90_s
      -  CO_25
      -  CO_50
      -  nh_5
      -  nh_50
      -  st80_25
      -  stOX

  wet_deposition:
    activate: true
